<h1><%= country.name %> Page</h1>
<a href="/countries">Back to Countries</a>
<div class="card">
    <h2><%= country.name %></h2>
        <ul>
            <li>Founded: <%= country.founded %></li>
            <li>Population: <%= country.population %></li>
            <li>Continent: <%= country.continentId %></li></li>
        </ul>
    <form method="POST" action="/countries/<%= country.id %>/?_method=DELETE">
        <input type="submit" value="Delete">
    </form>

    <form method="POST" action="/countries/<%= country.id %>/?_method=PUT">
        <label>Name: </label>
        <input type="text" name="name">

        <label>Founded: </label>
        <input type="text" name="founded">

        <label>Population: </label>
        <input type="text" name="population">

    <!-- <label>Continent: </label>
    <input type="text" name="continentId"> -->

    <input type="submit">
 
    </form>
</div>