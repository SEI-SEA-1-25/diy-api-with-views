<h1>Countries Show Page</h1>
<a href="/countries">Back to Countries Index</a>

<div class="card">
  <h2><%= country.name %> the <%= country.type %></h2>
  <form method="POST" action="/countries/<%= country.id %>/?_method=DELETE">
    <input type="submit" value="Delete" />
  </form>

  <form method="POST" action="/countries/<%= country.id %>/?_method=PUT">
    <label>Name</label>
    <input type="text" name="name" value="<%= country.name %>" />

    <label>Founded</label>
    <input type="text" name="founded" value="<%= country.founded %>" />
    <input type="submit" value="Update" />

    <label>Population</label>
    <input type="text" name="population" value="<%= country.population %>" />
    <input type="submit" value="Update" />
  </form>
</div>
