<h1>Country Show page</h1>
<a href="/countries">Back to countries</a>

<div class="card">
    <h2><%= continent.name %></h2>
    <h4><%= continent.founded %></h4>
    <h4><%= continent.population %></h4>

    <form method="POST" action="/counties/<%= country.id %>/?_method=DELETE">
        <input type="submit" value="Delete"> 
    </form>

    <form method="POST" action="/countries/<%= country.id %>/?_method=PUT">
        <label>Country:</label>
        <input type="text" name="name" value="<%= continent.name %>">

        <label>Founded:</label>
        <input type="text" name="founded" value="<%= continent.founded %>">

        <label>Population:</label>
        <input type="text" name="population" value="<%= continent.population %>">

        <input type="submit" value="Update">
    </form>
</div>